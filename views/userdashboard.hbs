{{> _usersidebar}}
<span class="main_bg"></span>

    <!-- ===== ===== Main-Container ===== ===== -->
    <div class="container">
      <!-- ===== ===== Header/Navbar ===== ===== -->
      <header>
        <div class="brandLogo">
          <figure>
            <img
              src="../images/logo.png"
              alt="logo"
              width="40px"
              height="40px"
            />
          </figure>
          <span>User Profile</span>
        </div>
      </header>

      <!-- ===== ===== User Main-Profile ===== ===== -->
      <section class="userProfile card">
        <div class="profile">
          <figure>
            <img
              src="/images/user1.png"
              alt="profile"
              width="250px"
              height="250px"
            />
          </figure>
        </div>
      </section>

      <!-- ===== ===== Work & Skills Section ===== ===== -->
      <section class="work_skills card">
        <!-- ===== ===== Work Contaienr ===== ===== -->
        <div class="work">
          <h1 class="heading">Personal Details</h1>
          <div class="primary">
            <h1>Height (In m):</h1>
            <p>{{user.Height}}</p>
          </div>

          <div class="secondary">
            <h1>Weight (In kg)</h1>
            <p>{{user.Weight}}</p>
          </div>

          <div class="secondary">
            <h1>BMI (current):</h1>
            <p>{{user.bmiIndex}}</p>
          </div>

          <div class="secondary">
            <h1>BMI Categories</h1>
            <p>
              Underweight = less than 18.5 </br>
              Normal weight = 18.5 to 24.9 </br>
              Overweight = 25 to 29.9 </br>
              Obesity = BMI of 30 or greater </br> </p> 
          </div>

        </div>

        <!-- ===== ===== Skills Contaienr ===== ===== -->
        <div class="skills"></div>
      </section>

      <!-- ===== ===== User Details Sections ===== ===== -->
      <section class="userDetails card">
        <div class="userName">
          <h1 class="name">{{user.Name}}</h1>
          <div class="map">
            <i class="ri-map-pin-fill ri"></i>
          </div>
          <p>Gym User</p>
        </div>

        <div class="rank">
          <h1 class="heading">Attendance</h1>
          <span>25/{{user.MembershipPlan.Duration}}</span>
        </div>

        <div class="rank">
          <h1 class="heading">Plan</h1>
          <span>{{user.MembershipPlan.Duration}} days</span>
        </div>

      </section>

      <!-- ===== ===== Timeline & About Sections ===== ===== -->
      <section class="timeline_about card">
        <div class="tabs">
          <ul>
            <li class="about active">
              <i class="ri-user-3-fill ri"></i>
              <span>About</span>
            </li>
          </ul>
        </div>

        <div class="contact_Info">
          <h1 class="heading">Contact Information</h1>
          <ul>
            <li class="phone">
              <h1 class="label">Phone:</h1>
              <span class="info">{{user.Phone}}</span>
            </li>

            <li class="address">
              <h1 class="label">Address:</h1>
              <span class="info">
                {{user.Address}}.</span
              >
            </li>

            <li class="email">
              <h1 class="label">E-mail:</h1>
              <span class="info">{{user.email}}</span>
            </li>

            <li class="site">
              <h1 class="label">Alternate Phone:</h1>
              <span class="info">{{user.AlternatePhone}}</span>
            </li>
          </ul>
        </div>
        <br />
        <div class="basic_info">
          <h1 class="heading">Basic Information</h1>
          <ul>
            <li class="birthday">
              <h1 class="label">Birthday:</h1>
              <span class="info">{{user.formattedBirthDate}}</span>
            </li>

            <li class="sex">
              <h1 class="label">Gender:</h1>
              <span class="info">{{user.Gender}}</span>
            </li>

            <li class="Age">
              <h1 class="label">Age:</h1>
              <span class="info">{{user.age}}</span>
            </li>
          </ul>
        </div>
      </section>
    </div>
{{> _userfooter}}